{
  "name": "tailwindcss-noscript",
  "version": "2.0.0",
  "license": "MIT",
  "description": "Conditionally apply Tailwind styles when JavaScript is enabled.",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "tailwindcss",
    "plugin",
    "noscript"
  ],
  "author": {
    "email": "hello@carlo.works",
    "name": "Carlo Dom√≠nguez",
    "url": "https://carlo.works"
  },
  "scripts": {
    "test:tsc": "tsc",
    "test:e2e": "playwright test",
    "test": "pnpm run '/^test:.*/'",
    "build": "tsup",
    "watch": "tsup --watch",
    "prepublishOnly": "tsup"
  },
  "peerDependencies": {
    "tailwindcss": "^3.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.32.1",
    "@types/node": "^18.15.11",
    "tailwindcss": "^3.3.0",
    "tslib": "^2.5.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2"
  }
}
