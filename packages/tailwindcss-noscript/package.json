{
  "name": "tailwindcss-noscript",
  "version": "0.1.3",
  "description": "Conditionally apply Tailwind styles when JavaScript is enabled.",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./script": {
      "require": "./dist/script/index.js",
      "import": "./dist/script/index.mjs",
      "types": "./dist/script/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "script": [
        "./dist/script/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "prepublishOnly": "tsup"
  },
  "keywords": [
    "tailwindcss",
    "plugin",
    "noscript"
  ],
  "author": {
    "email": "hello@carlo.works",
    "name": "Carlo Dom√≠nguez",
    "url": "https://carlo.works"
  },
  "license": "MIT",
  "peerDependencies": {
    "tailwindcss": "^3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.14.6",
    "tailwindcss": "^3.2.7",
    "tslib": "^2.5.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5"
  }
}
